<Window x:Class="UIAutomationTest.HandWritingCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIAutomationTest"
        mc:Ignorable="d"
        Title="Canvas" Visibility="Hidden" ShowInTaskbar="False" Initialized="Window_Initialized">
    <Canvas Name="theRootCanvas">
        <Border
      Background="White"
      BorderBrush="Black"
      BorderThickness="2"      >
            <InkCanvas Name="theInkCanvas"></InkCanvas>
        </Border>
    </Canvas>
</Window>
